{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["unused-imports", "prettier"],
  "rules": {
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ]
}
